@using OGEInflow.Client.Pages
@inherits LayoutComponentBase
<link rel="stylesheet" href="css/inflowLayout.css"/>
<MudThemeProvider Theme="@_theme" IsDarkMode="_isDarkMode"/>
<MudPopoverProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>
<MudLayout>
    <MudAppBar Elevation="2">
        @if (FileUpload.isFileUploaded)
        {
            <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())"/>
        }
        
        <MudImage src="img/ogelogo.png" style="width: auto; height: 100% "/>
        <MudText Typo="Typo.h5" Class="ml-3">Inflow</MudText>
        <MudSpacer/>
        @if (FileUpload.isFileUploaded)
        {
            <div class="nav-group-container">
                <MudNavGroup Title="Location" Icon="@Icons.Material.Filled.Place">
                    <MudNavLink Href="map.html">Map</MudNavLink>
                    <MudNavLink Href="contact.html">Contact Info</MudNavLink>
                </MudNavGroup>
            </div>
            <div class="nav-header">

                <MudText Class="menuitem">Activity</MudText>
                <MudText Class="menuitem">Map</MudText>
            </div>
            <MudIconButton Icon="@(DarkLightModeButtonIcon)" Color="Color.Inherit" OnClick="@DarkModeToggle"/>
            <MudIconButton Icon="@Icons.Material.Filled.MoreVert" Color="Color.Inherit" Edge="Edge.End"/>
        }
        <MudDrawer
            id="nav-drawer"
            @bind-Open="_drawerOpen"
            Variant="DrawerVariant.Temporary"
            Elevation="2"
            Anchor="Anchor.Left"
            Overlay="true">
            <NavMenu/>
        </MudDrawer>
    </MudAppBar>
    

    <MudMainContent Class="mt-16 pa-4">
        @Body
    </MudMainContent>
</MudLayout>


<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">ðŸ—™</span>
</div>